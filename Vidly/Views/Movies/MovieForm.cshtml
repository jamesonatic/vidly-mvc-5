@model Vidly.Models.Movie

@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DateAdded)
        @Html.TextBoxFor(m => m.DateAdded, "{0:yyyy-MM-dd}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DateRelease)
        @Html.TextBoxFor(m => m.DateRelease, "{0:yyyy-MM-dd}", new{@class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre.Name)
        @Html.TextBoxFor(m=>m.Genre.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m=>m.Stock)
        @Html.TextBoxFor(m=>m.Stock, new { @class = "form-control"})
    </div>

    <button type="submit" class="btn-primary">Save</button>
}